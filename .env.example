# Exemplo de configuração (NÃO coloque chaves reais aqui)

# Postgres (usado pelo docker-compose.yml)
POSTGRES_USER=idiomasbr
POSTGRES_PASSWORD=troque-esta-senha
POSTGRES_DB=idiomasbr

# Backend
# Se estiver usando docker-compose, DATABASE_URL é montado automaticamente.
# Se for rodar local, use algo como:
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/idiomasbr
SECRET_KEY=troque-esta-chave-secreta
USE_OLLAMA_FALLBACK=false
OLLAMA_URL=http://localhost:11434
FRONTEND_BASE_URL=http://localhost:3000
# Frontend (opcional): STT em tempo real via WebSocket
# Exemplo local com profile "stt": ws://localhost:8001
NEXT_PUBLIC_STT_WS_URL=

# SMTP (recuperacao de senha)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TLS=true
SMTP_SSL=false

# IA
# Chat: DeepSeek (recomendado pelo custo)
DEEPSEEK_API_KEY=

# TTS/STT: Lemonfox (preferencial)
LEMONFOX_API_KEY=
LEMONFOX_BASE_URL=https://api.lemonfox.ai/v1
LEMONFOX_ENABLED=false

# TTS/STT: OpenAI (fallback)
OPENAI_API_KEY=

# Redis (session store)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
SESSION_TTL_SECONDS=21600
