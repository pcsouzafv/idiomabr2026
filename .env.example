# Exemplo de configuração (NÃO coloque chaves reais aqui)

# Postgres (usado pelo docker-compose.yml)
POSTGRES_USER=idiomasbr
POSTGRES_PASSWORD=troque-esta-senha
POSTGRES_DB=idiomasbr

# Backend
# Se estiver usando docker-compose, DATABASE_URL é montado automaticamente.
# Se for rodar local, use algo como:
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/idiomasbr
SECRET_KEY=troque-esta-chave-secreta
ENVIRONMENT=development
USE_OLLAMA_FALLBACK=false
OLLAMA_URL=http://localhost:11434
FRONTEND_BASE_URL=http://localhost:3000
TURNSTILE_SECRET_KEY=
AUTH_REQUIRE_EMAIL_VERIFICATION=true
# Para desenvolvimento local sem SMTP, use:
# AUTH_REQUIRE_EMAIL_VERIFICATION=false
# Frontend (opcional): STT em tempo real via WebSocket
# Exemplo local com profile "stt": ws://localhost:8001
NEXT_PUBLIC_STT_WS_URL=
NEXT_PUBLIC_TURNSTILE_SITE_KEY=

# SMTP Hostinger (recuperacao de senha + suporte)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=admin@idiomasbr.com
SMTP_PASSWORD=
SMTP_FROM=admin@idiomasbr.com
SMTP_TLS=false
SMTP_SSL=true
SUPPORT_EMAIL=admin@idiomasbr.com

# Anti-abuso Auth
AUTH_REGISTER_LIMIT_PER_IP=8
AUTH_REGISTER_LIMIT_PER_EMAIL=3
AUTH_REGISTER_WINDOW_SECONDS=3600
AUTH_LOGIN_LIMIT_PER_IP=40
AUTH_LOGIN_LIMIT_PER_EMAIL=15
AUTH_LOGIN_WINDOW_SECONDS=900
AUTH_FORGOT_LIMIT_PER_IP=8
AUTH_FORGOT_WINDOW_SECONDS=900
AUTH_RESEND_LIMIT_PER_IP=6
AUTH_RESEND_LIMIT_PER_EMAIL=3
AUTH_RESEND_WINDOW_SECONDS=900

# IA
# Chat: DeepSeek (recomendado pelo custo)
DEEPSEEK_API_KEY=

# TTS/STT: Lemonfox (preferencial)
LEMONFOX_API_KEY=
LEMONFOX_BASE_URL=https://api.lemonfox.ai/v1
LEMONFOX_ENABLED=false

# TTS/STT: OpenAI (fallback)
OPENAI_API_KEY=
OPENAI_TTS_SPEED=0.88
AI_TEACHER_CHAT_TIMEOUT_SECONDS=18
AI_TEACHER_CHAT_MAX_RETRIES=0
AI_TEACHER_CHAT_TEMPERATURE=0.55
AI_TEACHER_OPENAI_MODEL=gpt-4o-mini
AI_TEACHER_DEEPSEEK_MODEL=deepseek-chat
AI_TEACHER_OPENAI_MAX_TOKENS=550
AI_TEACHER_DEEPSEEK_MAX_TOKENS=700

# Monitoramento de uso de IA (Admin)
# 0 = sem orçamento configurado
AI_USAGE_BUDGET_TOKENS=0
AI_USAGE_WARNING_PERCENT=80
AI_USAGE_CRITICAL_PERCENT=95

# Redis (session store)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
SESSION_TTL_SECONDS=21600
